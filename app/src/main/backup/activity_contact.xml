<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teamcortana.mycontactlist.ContactActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="604dp"
        tools:context=".ContactActivity"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        android:id="@+id/relativeLayout">


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:text="Name" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textName"
                    android:layout_marginLeft="10dp"
                    android:ems="15"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords">

                    <requestFocus />

                </EditText>

                <TextView
                    android:id="@+id/textAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Address"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/editAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textAddress"
                    android:layout_marginLeft="10dp"
                    android:ems="15"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editAddress"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="City"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/editCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textCity"
                    android:layout_marginLeft="10dp"
                    android:ems="8"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/editCity"
                    android:layout_below="@+id/editAddress"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/editCity"
                    android:text="State"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/editState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/editCity"
                    android:layout_below="@+id/textCity"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/editCity"
                    android:ems="2"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="2">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textZipCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editAddress"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/editState"
                    android:text="ZipCode"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/editZipCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textCity"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/editState"
                    android:ems="4"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="5">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textHomePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editState"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Home Phone"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/editHomePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textHomePhone"
                    android:layout_marginLeft="10dp"
                    android:ems="7"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="14"
                    android:nextFocusDown="@+id/editCell">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textCellPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editState"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/editHomePhone"
                    android:text="Cell Phone"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/editCellPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textCellPhone"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/editHomePhone"
                    android:ems="8"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="14"
                    android:nextFocusDown="@+id/editCell">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editHomePhone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="E-Mail Address"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textEmail"
                    android:layout_marginLeft="10dp"
                    android:ems="15"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/editCell">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textBday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editEmail"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Birthday:"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editEmail"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/textBday"
                    android:text="01/01/1970"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Button
                    android:id="@+id/btnBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textBirthday"
                    android:layout_alignBottom="@+id/textBirthday"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:text="Change" />

            </RelativeLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/navbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/navbar_background">

            <ImageButton
                android:id="@+id/imageButtonMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/contact_map" />

            <ImageButton
                android:id="@+id/imageButtonList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/imageButtonMap"
                android:src="@mipmap/contact_1" />

            <ImageButton
                android:id="@+id/imageButtonSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imageButtonMap"
                android:src="@mipmap/contacts_setting" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/toolbar_background"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ToggleButton
                android:id="@+id/toggleButtonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="ToggleButton" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="Save" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
